<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_form_head</item>
        <item name="colorPrimaryDark">@color/bg_form_head</item>
        <item name="colorAccent">@color/bg_form_head</item>
    </style>

    <!--windowBackground可设置背景图-->
    <style name="WelcomeStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- 填充顶部状态栏 -->
    <!-- <item name="android:windowTranslucentStatus">true</item> -->

    <!-- 对话框主题 -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 窗体公用样式 -->
    <style name="base_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_form</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 内容文本 -->
    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <!-- ********************************标题 ******************************** -->
    <!-- 标题布局 -->
    <style name="form_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp80</item>
        <item name="android:background">@color/bg_form_head</item>
    </style>

    <!-- 标题文本 -->
    <style name="form_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp40</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp20</item>
        <!-- <item name="android:textStyle">bold</item> -->

    </style>

    <!-- 标题_筛选 -->
    <style name="form_select">
        <item name="android:layout_width">@dimen/dp80</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- 标题_筛选 -->
    <style name="form_select_text">
        <item name="android:layout_width">@dimen/dp80</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/select_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <!-- ********************************标题 end******************************** -->

    <!-- 按钮 -->
    <style name="btn_base">
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 确认按钮、提交按钮等 -->
    <style name="btn_ok">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp58</item>
        <item name="android:layout_margin">@dimen/dp13</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:text">@string/btn_ok</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 获取验证码 -->
    <style name="btn_get_code">
        <item name="android:layout_width">@dimen/dp115</item>
        <item name="android:layout_height">@dimen/dp38</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
        <item name="android:background">@drawable/shape_btn_getcode</item>
        <item name="android:text">@string/btn_get_code</item>
        <item name="android:textColor">#1ed5c1</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <!-- view分割线样式 -->
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- view分割线样式短 -->
    <style name="view_line_short" parent="view_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- view分割线样式 -->
    <style name="view_line_vertical">
        <item name="android:layout_width">@dimen/dp1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- 文本输入框基本样式 -->
    <style name="base_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp58</item>
        <item name="android:layout_marginTop">@dimen/dp13</item>
        <item name="android:layout_marginStart">@dimen/dp13</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
        <item name="android:padding">@dimen/dp13</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>


    <!-- *****************************首页***************************** -->

    <style name="tab1_menu_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp105</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="tab1_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tab1_menu_item_img">
        <item name="android:layout_width">@dimen/dp42</item>
        <item name="android:layout_height">@dimen/dp42</item>
    </style>

    <style name="tab1_menu_item_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:textColor">#727272</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>

    <!-- 抽屉菜单图标 -->
    <style name="tab1_left_menu_item_img">
        <item name="android:layout_width">@dimen/dp26</item>
        <item name="android:layout_height">@dimen/dp26</item>
        <item name="android:layout_marginStart">@dimen/dp80</item>
    </style>

    <!-- 抽屉菜单文本 -->
    <style name="tab1_left_menu_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp21</item>
        <item name="android:layout_marginEnd">@dimen/dp108</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- *****************************首页end***************************** -->


    <!-- *********************************我的页面 ********************************* -->
    <!-- 设置、登录、注册 -->
    <style name="tab3_top_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>

    <!-- 我的_菜单_项 -->
    <style name="tab3_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp62</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 左边图标 -->
    <style name="tab3_menu_item_icon">
        <item name="android:layout_width">@dimen/dp26</item>
        <item name="android:layout_height">@dimen/dp26</item>
        <item name="android:layout_marginStart">@dimen/dp17</item>
        <item name="android:layout_marginEnd">@dimen/dp13</item>
    </style>

    <!-- 菜单内容 -->
    <style name="tab3_menu_item_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp26</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>

    <!-- 菜单右边箭头 -->
    <style name="tab3_menu_item_right">
        <item name="android:layout_width">@dimen/dp16</item>
        <item name="android:layout_height">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp21</item>
        <item name="android:src">@mipmap/icon_right</item>
    </style>

    <!-- view分割线样式短 -->
    <style name="view_line_tab3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:layout_marginStart">@dimen/dp56</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- *********************************我的页面end ********************************* -->


    <!-- *********************************个人资料 ********************************* -->


    <!-- 个人资料_项 -->
    <style name="my_info_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp64</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 左边标题 -->
    <style name="my_info_title" parent="tab3_menu_item_text">
        <item name="android:layout_marginStart">@dimen/dp20</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 内容 -->
    <style name="my_info_content" parent="text_content">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">@dimen/dp13</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <!-- *********************************个人资料end ********************************* -->


    <!-- *********************************注册 ********************************* -->

    <style name="register_text" parent="tab3_menu_item_text">
        <item name="android:textColor">@color/register_text</item>
    </style>

    <style name="register_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/dp13</item>
        <item name="android:paddingRight">@dimen/dp20</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <!-- *********************************注册end ********************************* -->


    <!-- popupwindow -->
    <!-- 从下到上 -->
    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <!-- 从上到下 -->
    <style name="app_pop2">
        <item name="android:windowEnterAnimation">@anim/pop_up2</item>
        <item name="android:windowExitAnimation">@anim/pop_down2</item>
    </style>

    <!-- 从左到右 -->
    <style name="app_pop_1">
        <item name="android:windowEnterAnimation">@anim/pop_down_1</item>
        <item name="android:windowExitAnimation">@anim/pop_up_1</item>
    </style>

    <!-- 可见度从无到有 -->
    <style name="app_pop_2">
        <item name="android:windowEnterAnimation">@anim/pop_down_2</item>
        <item name="android:windowExitAnimation">@anim/pop_up_2</item>
    </style>
</resources>
