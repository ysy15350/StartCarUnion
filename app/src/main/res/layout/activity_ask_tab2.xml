<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/form_head" />

    <EditText
        android:id="@+id/et_tent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp240"
        android:layout_margin="@dimen/dp13"
        android:background="@color/bg_form"
        android:gravity="top"
        android:hint="请输入公司简介，以便客户更加了解"
        android:inputType="textMultiLine"
        android:maxLength="200"
        android:padding="@dimen/dp13"
        android:textColor="@color/text_edit"
        android:textColorHint="@color/text_hint"
        android:textSize="@dimen/sp20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/btn_ok"
        android:text="发布" />

</LinearLayout>