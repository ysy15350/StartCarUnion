<?xml version="1.0" encoding="utf-8"?>
<custom_view.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:avi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout style="@style/base_form">

        <!-- 顶部Banner部分 -->

        <RelativeLayout
            android:id="@+id/rl_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp340">

            <custom_view.SlideShowViewAuto
                android:id="@+id/slideshowView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp340" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp30"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:layout_margin="@dimen/dp10"
                    android:src="@mipmap/icon_head" />

                <LinearLayout
                    android:id="@+id/ll_search"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginRight="@dimen/dp35"
                    android:background="@drawable/rounded_rectangle_search"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginStart="@dimen/dp15"
                        android:src="@mipmap/icon_search_blue" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp13"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="搜索配件服务商"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/sp20" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- 顶部Banner部分end -->


        <!-- 动态 -->

        <LinearLayout
            style="@style/tab3_menu_item"
            android:layout_height="@dimen/dp48"
            android:background="@color/white">

            <ImageView
                style="@style/tab3_menu_item_icon"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/icon_msg" />

            <custom_view.TextSwitchView
                android:id="@+id/tv_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp26"
                android:layout_weight="1"

                android:inAnimation="@anim/in_anim"
                android:outAnimation="@anim/out_anim"
                android:text="@string/default_text" />
        </LinearLayout>

        <!-- 菜单 -->

        <LinearLayout
            style="@style/tab1_menu_horizontal"
            android:layout_marginTop="@dimen/dp13">

            <LinearLayout
                android:id="@+id/ll_menu_1"
                style="@style/tab1_menu_item">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:src="@mipmap/icon_tab1_menu_1" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_1" />
            </LinearLayout>

            <View style="@style/view_line_vertical" />

            <LinearLayout
                android:id="@+id/ll_menu_2"
                style="@style/tab1_menu_item">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:src="@mipmap/icon_tab1_menu_2" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_2" />
            </LinearLayout>

            <View style="@style/view_line_vertical" />

            <LinearLayout
                android:id="@+id/ll_menu_3"
                style="@style/tab1_menu_item">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:src="@mipmap/icon_tab1_menu_3" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_3" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/view_line" />

        <LinearLayout style="@style/tab1_menu_horizontal">

            <LinearLayout
                android:id="@+id/ll_menu_4"
                style="@style/tab1_menu_item">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:src="@mipmap/icon_tab1_menu_4" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_4" />
            </LinearLayout>

            <View style="@style/view_line_vertical" />

            <LinearLayout
                android:id="@+id/ll_menu_5"
                style="@style/tab1_menu_item">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:src="@mipmap/icon_tab1_menu_5" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_5" />
            </LinearLayout>

            <View style="@style/view_line_vertical" />

            <LinearLayout
                android:id="@+id/ll_menu_6"
                style="@style/tab1_menu_item">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:src="@mipmap/icon_tab1_menu_6" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_6" />
            </LinearLayout>
        </LinearLayout>

        <!-- 菜单 end -->


        <!-- 菜单 2 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp162"
            android:layout_marginBottom="@dimen/dp13"
            android:layout_marginTop="@dimen/dp13"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_menu_7"
                style="@style/tab1_menu_item"
                android:background="#1ed5c3">

                <ImageView
                    style="@style/tab1_menu_item_img"
                    android:layout_width="@dimen/dp51"
                    android:layout_height="@dimen/dp51"
                    android:src="@mipmap/icon_tab1_menu_7" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:text="@string/tab1_menu_7"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp22" />

                <TextView
                    style="@style/tab1_menu_item_txt"
                    android:layout_marginTop="@dimen/dp2"
                    android:text="@string/tab1_menu_7_1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <LinearLayout
                style="@style/tab1_menu_item"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_menu_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#ffac5c"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/tab1_menu_item_img"
                        android:layout_width="@dimen/dp38"
                        android:layout_height="@dimen/dp38"
                        android:layout_marginStart="@dimen/dp13"
                        android:src="@mipmap/icon_tab1_menu_9" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tab1_menu_item_txt"
                            android:text="@string/tab1_menu_8"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp22" />

                        <TextView
                            style="@style/tab1_menu_item_txt"
                            android:layout_marginTop="@dimen/dp2"
                            android:text="@string/tab1_menu_8_1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#22a1cc"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/tab1_menu_item_img"
                        android:layout_width="@dimen/dp38"
                        android:layout_height="@dimen/dp38"
                        android:layout_marginStart="@dimen/dp13"
                        android:src="@mipmap/icon_tab1_menu_9" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tab1_menu_item_txt"
                            android:text="@string/tab1_menu_9"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp22" />

                        <TextView
                            style="@style/tab1_menu_item_txt"
                            android:layout_marginTop="@dimen/dp2"
                            android:text="@string/tab1_menu_9_1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 菜单 2 end -->

    </LinearLayout>

</custom_view.MyScrollView>