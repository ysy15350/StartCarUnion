<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!-- 商家交谈 -->

    <LinearLayout
        android:id="@+id/ll_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">


        <!-- 图标 -->

        <ImageView
            android:id="@+id/img_head_business"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginEnd="@dimen/dp13"
            android:layout_marginStart="@dimen/dp13"
            android:src="@mipmap/icon_head" />

        <RelativeLayout
            android:layout_width="@dimen/dp320"

            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp7"
                android:background="@drawable/shape_dialog_talk"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp13"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp24" />

                <View style="@style/view_line_short" />

                <TextView
                    android:id="@+id/tv_create_time_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp13"
                    android:text="@string/default_text"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <!--左边箭头-->
            <ImageView
                android:layout_width="@dimen/dp8"
                android:layout_height="@dimen/dp11"
                android:layout_marginTop="@dimen/dp21"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_talk_left" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp13"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="right"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="@dimen/dp320"

            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp7"
                android:background="@drawable/shape_dialog_talk"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp13"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp24" />

                <View style="@style/view_line_short" />

                <TextView
                    android:id="@+id/tv_create_time_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp13"
                    android:text="@string/default_text"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <!--右边箭头-->
            <ImageView
                android:layout_width="@dimen/dp8"
                android:layout_height="@dimen/dp11"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp21"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_talk_right" />


        </RelativeLayout>

        <!-- 图标 -->

        <ImageView
            android:id="@+id/img_head_mine"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"

            android:layout_marginEnd="@dimen/dp13"
            android:layout_marginStart="@dimen/dp13"
            android:src="@mipmap/icon_head" />

    </LinearLayout>


</LinearLayout>

