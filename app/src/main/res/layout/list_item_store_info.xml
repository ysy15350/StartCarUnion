<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <!-- 商家列表 -->


        <!-- 图标 -->

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp84"
            android:layout_marginEnd="@dimen/dp13"
            android:layout_marginStart="@dimen/dp13" />

        <!-- 文字部分 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp13"
            android:layout_marginTop="@dimen/dp13"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                android:textColor="@color/text_list_title"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tv_pid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:text="主营：业务业务业务业务业务业务业务业务业务业务"
                android:textColor="@color/text_list_content"
                android:textSize="@dimen/sp18" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="电话:"
                    android:textColor="@color/text_list_content"
                    android:textSize="@dimen/sp18" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="13880006166/3222323233/3223233"
                    android:textColor="@color/text_list_content"
                    android:textSize="@dimen/sp18" />
            </LinearLayout>


        </LinearLayout>

        <!-- 分割线 -->

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp30"
            android:layout_marginTop="@dimen/dp30"
            android:background="@color/devider_color_mycollection_virtual" />

        <!-- 右边电话部分 -->

        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="@dimen/dp110"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@mipmap/icon_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:text="拨打"
                android:textColor="@color/text_list_title"
                android:textSize="@dimen/sp22" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_line" />
</LinearLayout>

