<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp40"

    android:layout_marginStart="@dimen/dp40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp340"
            android:layout_marginTop="@dimen/dp38"
            android:background="@drawable/shape_dialog"
            android:padding="@dimen/dp13"
            android:text="提示内容">

            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@mipmap/icon_edit_reply" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp10"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请把回复的内容写在这里哦~"
                android:lineSpacingExtra="5dp"
                android:maxLength="200"
                android:textColor="@color/text_content"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <View style="@style/view_line" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp58"
            android:layout_marginTop="@dimen/dp13"
            android:background="@drawable/shape_btn"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp13"
        android:background="@drawable/shape_close_circle_reply"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp15"
            android:layout_height="@dimen/dp15"
            android:src="@mipmap/icon_close" />
    </LinearLayout>

</RelativeLayout>