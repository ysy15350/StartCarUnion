<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/bg_form"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp13"

        >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/sp22" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp5"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#a7a7a7"
            android:textSize="@dimen/sp22" />


    </LinearLayout>

    <!-- 留言 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp88"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 图标 -->

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginEnd="@dimen/dp13"
            android:layout_marginStart="@dimen/dp13" />

        <!-- 文字部分 -->

        <TextView
            android:id="@+id/tv_fullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="名称"
            android:textColor="@color/text_list_title"
            android:textSize="@dimen/sp22" />

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp13"
            android:text="2017/01/01"
            android:textColor="@color/text_list_time"
            android:textSize="@dimen/sp20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:layout_marginEnd="@dimen/dp13"
        android:layout_marginStart="@dimen/dp13"
        android:background="@drawable/shape_line_dashed"
        android:layerType="software" />

</LinearLayout>